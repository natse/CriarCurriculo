@model CurriculoFrancisco.Models.InformacaoAdicional

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcao" class="control-label"></label>
                <input asp-for="Funcao" class="form-control" />
                <span asp-validation-for="Funcao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instituicao" class="control-label"></label>
                <input asp-for="Instituicao" class="form-control" />
                <span asp-validation-for="Instituicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoFormacao" class="control-label"></label>
                <input asp-for="TipoFormacao" class="form-control" />
                <span asp-validation-for="TipoFormacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituicaoAno" class="control-label"></label>
                <input asp-for="InstituicaoAno" class="form-control" />
                <span asp-validation-for="InstituicaoAno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descriacao" class="control-label"></label>
                <input asp-for="Descriacao" class="form-control" />
                <span asp-validation-for="Descriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Calcela</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
